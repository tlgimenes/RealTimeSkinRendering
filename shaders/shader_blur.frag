////////////////////////////////////////////////////////////////////////////////////////
// OpenGL 4.5 
#version 450


////////////////////////////////////////////////////////////////////////////////////////
// Textures
uniform sampler2D tex_skin;

////////////////////////////////////////////////////////////////////////////////////////
// Parameters
in vec2 tex_uv_interp;

////////////////////////////////////////////////////////////////////////////////////////
// Return: color
layout(location=0) out vec4 frag_color;

////////////////////////////////////////////////////////////////////////////////////////

void main (void) {
    frag_color = vec4(0.0, 0.0, 0.0, 1.0);
    
    // ---------- Texture -------------
    vec4 tex = texture (tex_skin, tex_uv_interp);
    // ----------------------------------------

    frag_color = tex;
}

